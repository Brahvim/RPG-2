{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{ // Vite Build
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"type": "shell",
			"presentation": {
				"clear": true,
				"close": true,
				"reveal": "silent",
			},
			"isBackground": true,
			"label": "Vite Build",
			"command": "npx vite build",
		},
		{ // Start Firefox Debugger Server
			"type": "shell",
			"group": "test",
			"presentation": {
				"clear": true,
				"close": true,
				"reveal": "never",
			},
			"isBackground": true,
			"label": "Start Firefox Debugger Server",
			"command": "firefox --start-debugger-server 6000",
		},
	],
}